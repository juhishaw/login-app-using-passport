<h2 class="page-header">Dashboard</h2>
<p>Welcome to your Chat App</p>

<div class="clearfix">
    <form ng-Submit="post()">
        <input required type="text" class="form-control" placeholder="Your name" ng-model="newPost.created_by" name="username"/> <br />
        <textarea required class="form-control" maxlength="200" rows="3" placeholder="Say something" ng-model="newPost.text" name="chirp"></textarea>
        <input class="btn submit-btn pull-right" type="submit" value="Chirp!" />
    </form>
    <div id="post-stream">
        <h4>Chirp Feed</h4>
        <div class="post" ng-repeat="post in posts | orderBy:'created_at':true" ng-class-odd="'odd'" ng-class-even="'even'">
            <p>{[{post.text}]}</p>
            <small>Posted by @{[{post.created_by}]}</small>
            <small class="pull-right">{[{post.created_at | date:"h:mma 'on' MMM d, y"}]}</small>
        </div>
    </div>
</div>

